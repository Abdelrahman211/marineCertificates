<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="225dp"
    app:layoutDescription="@xml/fragment_home_scene"
    tools:context=".HomeFragment">

    <LinearLayout
        android:id="@+id/Layout_cer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center|left"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/cer"
            android:layout_width="157dp"
            android:layout_height="132dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_certificate" />

        <Button
            android:id="@+id/btn_crt"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:shadowColor="#606060"
            android:text="Certificates"
            android:textColor="#FFFFFF"
            android:textColorHighlight="@color/primaryTextColor"
            android:textSize="15sp"
            app:cornerRadius="25dp"
            app:iconPadding="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout_cor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center|right"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Cor"
            android:layout_width="157dp"
            android:layout_height="132dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_course" />

        <Button
            android:id="@+id/btn_cor"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:shadowColor="#606060"
            android:text="Courses"
            android:textColor="#FFFFFF"
            android:textColorHighlight="@color/primaryTextColor"
            android:textSize="15sp"
            app:cornerRadius="25dp"
            app:iconPadding="20dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>